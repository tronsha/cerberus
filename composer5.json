{
  "name": "tronsha/cerberus",
  "description": "Cerberus IRC Bot",
  "type": "project",
  "require": {
    "php": ">=5.4",
    "ext-mcrypt": "*",
    "doctrine/dbal": "2.5.*",
    "symfony/console": "2.8.*",
    "symfony/translation": "2.8.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "friendsofphp/php-cs-fixer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "Cerberus\\": "library/",
      "Hades\\": "public/library/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Cerberus\\Installer::install"
    ],
    "post-create-project-cmd": [
      "Cerberus\\Installer::install"
    ]
  }
}
